<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/avatar_name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_corner"
        android:gravity="center"
        android:padding="10dp"
        android:text="Your Avatar"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true" />
    <ImageButton
        android:id="@+id/button_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/head"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/avatar_name"
        android:layout_alignStart="@+id/avatar_name" />
    <ImageButton
        android:id="@+id/button_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/background"
        android:layout_below="@+id/button_head"
        android:layout_alignEnd="@+id/avatar_name" />
    <ImageButton
        android:id="@+id/button_neck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/neck"
        android:layout_below="@+id/button_background"
        android:layout_alignStart="@+id/avatar_name" />
    <ImageButton
        android:id="@+id/button_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/top"
        android:layout_below="@+id/button_neck"
        android:layout_alignEnd="@+id/avatar_name" />
    <ImageButton
        android:id="@+id/button_arms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arm"
        android:layout_below="@+id/button_top"
        android:layout_alignStart="@+id/avatar_name" />
    <ImageButton
        android:id="@+id/button_handright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/handright"
        android:layout_below="@+id/button_arms"
        android:layout_alignEnd="@+id/avatar_name" />
    <ImageButton
        android:id="@+id/button_handleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/handleft"
        android:layout_below="@+id/button_handright"
        android:layout_alignStart="@+id/avatar_name" />
    <ImageButton
        android:id="@+id/button_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bottom"
        android:layout_below="@+id/button_handleft"
        android:layout_alignEnd="@+id/avatar_name" />
    <ImageButton
        android:id="@+id/button_feet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/foot"
        android:layout_below="@+id/button_bottom"
        android:layout_alignStart="@+id/avatar_name" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avatar_background"
        android:layout_alignTop="@+id/button_head"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avatar_aura"
        android:layout_alignTop="@+id/button_head"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avatar_base"
        android:layout_alignTop="@+id/button_head"
        android:src="@drawable/profile_avatar"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avatar_head"
        android:layout_alignTop="@+id/button_head"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avatar_neck"
        android:layout_alignTop="@+id/button_head"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avatar_bottom"
        android:layout_alignTop="@+id/button_head"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avatar_top"
        android:layout_alignTop="@+id/button_head"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avatar_feet"
        android:layout_alignTop="@+id/button_head"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avatar_arms"
        android:layout_alignTop="@+id/button_head"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avatar_handleft"
        android:layout_alignTop="@+id/button_head"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avatar_handright"
        android:layout_alignTop="@+id/button_head"
        android:layout_centerHorizontal="true" />
</RelativeLayout>