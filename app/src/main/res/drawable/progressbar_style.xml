<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#ffffeed8"
                android:centerColor="#ffdbcab6"
                android:centerY="0.75"
                android:endColor="#ffa09287"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#fff9871e"
                    android:centerColor="#d6ff8b11"
                    android:centerY="0.75"
                    android:endColor="#fff97610"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:startColor="@color/comfort_orange"
                    android:endColor="@color/colorPrimaryDark"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>